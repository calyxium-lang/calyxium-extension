{
  "name": "calyxium",
  "displayName": "Calyxium",
  "description": "A lang-pack for Calyxium containing a syntax highlighter, lsp, and more all in one",
  "version": "1.0.0",
  "publisher": "Calyxium-lang",
  "icon": "imgs/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/calyxium-lang/calyxium-extension"
  },
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Language Packs",
    "Extension Packs",
    "Languages",
    "Formatters",
    "Snippets",
    "Other"
  ],
  "main": "out/extension",
  "activationEvents": [
    "onLanguage:calyxium"
  ],
    "contributes": {
    "languages": [
      {
        "id": "calyxium",
        "aliases": [
          "calyxium"
        ],
        "extensions": [
          ".cx",
          ".cxm"
        ],
        "configuration": "syntax-highlighting/language-configuration.json"
      },
      {
        "id": "calyxiumHover",
        "extensions": [
          ".cxh"
        ],
        "configuration": "syntax-highlighting/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "calyxium",
        "scopeName": "source.calyxium",
        "path": "syntax-highlighting/calyxium.tmLanguage.json"
      },
      {
        "language": "calyxiumHover",
        "scopeName": "source.calyxiumHover",
        "path": "syntax-highlighting/calyxiumHover.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
